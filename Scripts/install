echo ""
echo -e " automatic installation, please wait..." & sleep 3
echo ""
clear
echo -e ""
termux-setup-storage & sleep 3 &>/dev/null
yes | pkg update -y
echo ""
echo -e " Installing x11-repo..."
pkg install x11-repo -y &>/dev/null
echo ""
echo -e " X11-repo installed."
echo -e ""
echo -e " Downloading and Installing x11 Server Script."
curl -o x11 https://raw.githubusercontent.com/jurises99/Exa-X11/main/Scripts/x11 &>/dev/null
chmod +x x11
mv x11 $PREFIX/bin
echo ""
echo -e " Script installed."
echo ""
echo -e " Installing additional packages..."
echo ""
pkg install xorg-server-xvfb -y
echo ""
echo ""
echo -e " Downloading and installing the Termux-x11 package..."
wget https://github.com/jurises99/Exa-X11/raw/main/Apps/termux-x11-1.02.07-0-all.deb &>/dev/null
dpkg -i termux-x11-1.02.07-0-all.deb &>/dev/null
echo ""
apt -f install -y && cd
echo -e " Termux X11 Installed"
clear
echo -e "to start X11 just type X11"
